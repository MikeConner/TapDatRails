%section.leaderboard
  .row.stats
    - n = [@tappers.length, @tapped.length].max
    .small-6.columns
      %h1 The Tappers
      %table
        %thead
          %tr
            %th
            %th
            %th name
            %th amount
            %th taps
        - if n >= 1
          - for x in 0..5 do
            %tr
              - if x < @tappers.length
                %td= @tappers.length
                %td
                  .image= image_tag @image_map[@tappers[x].user_id]
                %td= @names_map[@tappers[x].user_id]
                %td
                  .pill= number_to_currency(@tappers[x].dollar)
                %td= number_with_delimiter(@tappers[x].taps)

    .small-6.columns
      %h1 The Tapped
      %table
        %thead
          %tr
            %th
            %th
            %th name
            %th amount
            %th taps
        - if n >= 1
          - for x in 0..5 do
            %tr
              - if x < @tapped.length
                %td= @tappers.length[x]
                %td
                  .image= image_tag @image_map[@tappers[x].user_id]
                %td= @names_map[@tappers[x].user_id]
                %td= number_to_currency(@tappers[x].dollar)
                %td
                  .pill= number_with_delimiter(@tappers[x].taps)
