.row
  .large-12.columns
    %h1
      = @currency.name
      Leader Board
%section.leaderboard
  .row.stats
    - n = [@tappers.length, @tapped.length].max
    .small-6.columns
      %h1 The Tappers
      %table
        %thead
          %tr
            %th
            %th
            %th name
            %th satoshi
            %th amount
            %th taps
        - if n >= 1
          - for x in 0..5 do
            %tr
              - if x < @tappers.length
                %td= x+1
                %td
                  .image= image_tag @image_map[@tappers[x].user_id]
                %td= @names_map[@tappers[x].user_id]
                %td
                  .pill= number_with_delimiter(@tappers[x].satoshi)
                %td
                  .pill= number_with_delimiter((@tappers[x].total || 0) / 100)
                %td= number_with_delimiter(@tappers[x].taps)
    .small-6.columns
      %h1 The Tapped
      %table
        %thead
          %tr
            %th
            %th name
            %th satoshi
            %th amount
            %th taps
        - if n >= 1
          - for x in 0..5 do
            %tr
              - if x < @tapped.length
                %td= x+1
                %td= @names_map[@tapped[x].nfc_tag_id]
                %td= number_with_delimiter(@tapped[x].satoshi)
                %td= number_with_delimiter((@tapped[x].total || 0) / 100)
                %td
                  .pill= number_with_delimiter(@tapped[x].taps)
  .row.stat
    .large-10.columns.small-centered
      %br
      %h1 Lastest Tap
