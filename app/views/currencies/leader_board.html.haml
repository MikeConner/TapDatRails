.row
  .large-12.columns
    %h1
      = @currency.name
      Leader Board
%section
  .row
    .small-12.columns
      %table
        %thead
          %tr
            %th The Tappers
            %th
            %th
            %th
            %th The Tapped
            %th
            %th
            %th
        %tbody
          - n = [@tappers.length, @tapped.length].max
          - if n >= 1
            - for x in 0..(n - 1) do
              %tr
                - if x < @tappers.length
                  %td= image_tag @image_map[@tappers[x].user_id], :style => 'width:60px'
                  %td= @names_map[@tappers[x].user_id]
                  %td= number_with_delimiter(@tappers[x].total)
                  %td= number_with_delimiter(@tappers[x].taps)
                - else
                  %td
                  %td
                  %td
                  %td
                - if x < @tapped.length  
                  %td= image_tag @image_map[@tapped[x].dest_id], :style => 'width:60px'
                  %td= @names_map[@tapped[x].dest_id]
                  %td= number_with_delimiter(@tapped[x].total)
                  %td= number_with_delimiter(@tapped[x].taps)
                - else
                  %td
                  %td
                  %td
                  %td
